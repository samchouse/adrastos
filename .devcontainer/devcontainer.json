{
  "name": "Adrastos",
  "forwardPorts": [3000, 8000],
  "build": { "dockerfile": "Dockerfile" },
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "editor.fontFamily": "Menlo, Monaco, Consolas",
        "terminal.integrated.fontFamily": "Menlo, Monaco, Hack, Consolas",
        "editor.cursorBlinking": "expand",
        "editor.insertSpaces": false,
        "editor.accessibilitySupport": "off",
        "editor.inlineSuggest.enabled": true,
        "editor.fontLigatures": "'ss02' on",
        "editor.fontSize": 15,
        "scss.lint.unknownAtRules": "ignore",
        "files.autoSave": "afterDelay",
        "redhat.telemetry.enabled": true,
        "editor.cursorStyle": "line",
        "typescript.updateImportsOnFileMove.enabled": "always",
        "editor.linkedEditing": true,
        "javascript.updateImportsOnFileMove.enabled": "always",
        "editor.lineNumbers": "on",
        "git.autofetch": true,
        "files.eol": "\n",
        "markdown.preview.typographer": true,
        "cSpell.userWords": [
          "aheeva",
          "bson",
          "catppuccin",
          "clsx",
          "contentlayer",
          "Corsi",
          "deno",
          "dotenv",
          "Dotfiles",
          "esbuild",
          "Formik",
          "frontmatter",
          "iframe",
          "macronutrients",
          "nrwl",
          "rehype",
          "signup",
          "superjson",
          "tailwindcss",
          "trivago",
          "trpc",
          "turborepo",
          "unlisten",
          "vercel",
          "vite",
          "vitejs",
          "Xenfo",
          "zapcore"
        ],
        "editor.lineHeight": 1.55,
        "files.associations": {
          "Justfile": "makefile",
          "*.secrets": "dotenv"
        },
        "eslint.format.enable": true,
        "editor.suggestSelection": "first",
        "workbench.productIconTheme": "fluent-icons",
        "editor.wordWrap": "off",
        "workbench.editor.decorations.colors": true,
        "editor.bracketPairColorization.enabled": true,
        "terminal.integrated.enableMultiLinePasteWarning": false,
        "github.copilot.enable": {
          "*": true
        },
        "shellcheck.customArgs": ["-x"],
        "notebook.lineNumbers": "on",
        "editor.tabSize": 2,
        "explorer.fileNesting.patterns": {
          "package.json": "package-lock.json,yarn.lock,pnpm-lock.yaml",
          "go.mod": "go.sum",
          ".gitignore": ".prettierignore,.eslintignore,.dockerignore",
          "*.mjs": "${capture}.mjs.map, ${capture}.min.mjs, ${capture}.d.ts",
          "tsconfig.json": "tsconfig.*.json",
          ".env": "*.env"
        },
        "explorer.fileNesting.enabled": true,
        "gitlens.hovers.currentLine.over": "line",
        "gitlens.statusBar.enabled": false,
        "gitlens.hovers.enabled": false,
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.suggest.showWords": false,
        "gitlens.codeLens.enabled": false,
        "gitlens.currentLine.enabled": false,
        "terminal.integrated.sendKeybindingsToShell": true,
        "[typescriptreact]": {
          "editor.defaultFormatter": "dbaeumer.vscode-eslint"
        },
        "[jsonc]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[typescript]": {
          "editor.defaultFormatter": "dbaeumer.vscode-eslint"
        },
        "workbench.colorTheme": "Moonlight II Italic",
        "[javascript]": {
          "editor.defaultFormatter": "dbaeumer.vscode-eslint"
        },
        "[json]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[toml]": {
          "editor.defaultFormatter": "tamasfe.even-better-toml"
        },
        "[dockerfile]": {
          "editor.defaultFormatter": "ms-azuretools.vscode-docker"
        },
        "[yaml]": {
          "editor.defaultFormatter": "redhat.vscode-yaml"
        }
      },
      "extensions": [
        "formulahendry.auto-rename-tag",
        "aaron-bond.better-comments",
        "mikestead.dotenv",
        "miguelsolorio.fluent-icons",
        "atomiks.moonlight",
        "csstools.postcss",
        "streetsidesoftware.code-spell-checker",
        "denoland.vscode-deno",
        "ms-azuretools.vscode-docker",
        "dbaeumer.vscode-eslint",
        "tamasfe.even-better-toml",
        "eamodio.gitlens",
        "oderwat.indent-rainbow",
        "ms-vscode.vscode-typescript-next",
        "unifiedjs.vscode-mdx",
        "ms-playwright.playwright",
        "esbenp.prettier-vscode",
        "yoavbls.pretty-ts-errors",
        "redhat.vscode-commons",
        "rust-lang.rust-analyzer",
        "foxundermoon.shell-format",
        "timonwong.shellcheck",
        "bradlc.vscode-tailwindcss",
        "ZixuanChen.vitest-explorer",
        "WakaTime.vscode-wakatime",
        "redhat.vscode-yaml",
        "GitHub.copilot"
      ]
    }
  }
}
